void d_returns_func(int dwarf_num) {
    wait(in_return_cs);

    if (dwarf_counter == 2) {               // If 2, then that means that this will be the last dwarf to return
        print_d_r_last(dwarf_num);
        Delay();                            
        signal(sw_sem_4);
    }
    else {
        print_d_r_NL(dwarf_num);
        Delay();
        dwarf_counter++;
    }

    signal(in_return_cs);
}

