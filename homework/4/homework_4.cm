void d_leave_func (int dwarf_num) {
    wait(in_leave_cs);
    
    print_dwarven_leave(dwarf_num);
    Delay();                                // Only one dwarf can fit through the door at a time

    dwarf_counter++;

    if (dwarf_counter == 3) {
